{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@engine/*": ["src/engine/*"],
      "@sim/*": ["src/sim/*"],
      "@net/*": ["src/net/*"],
      "@common/*": ["src/common/*"],
      "@tools/*": ["src/tools/*"],
      "@client/*": ["src/client/*"],
      "@client/gfx/*": ["src/client/gfx/*"],
      "@client/net/*": ["src/client/net/*"],
      "@client/ui/*": ["src/client/ui/*"],
      "@client/gameplay/*": ["src/client/gameplay/*"],
      "@client/audio/*": ["src/client/audio/*"]
    }
  },
  "include": ["src"]
}
